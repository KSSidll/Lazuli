@if (Comment is not null)
{
	<div class="comment d-grid gap-2 p-sm-2 shadow-sm m-2">
		<div>
			<a class="fw-bold text-decoration-none" href="mailto: @Comment.Email">@Comment.Email</a>
		</div>
		<div>
			<h5>@Comment.Name</h5>
			@Comment.Body
		</div>
	</div>
}

@code {

	[Parameter]
	public CommentModel? Comment { get; set; }

}