
@if (Post is not null)
{	<div>
		<div class="d-grid gap-2">
			<div>
				<a href="">
					<label class="fw-bold">@@@Post.Username</label>
				</a>
			</div>
			<div class="fs-5">
				<label class="fst-italic">@Post.Title</label>
			</div>
			<div class="border border-1 rounded rounded-5 p-sm-2 shadow-sm">
				<label>@Post.Body</label>
			</div>
			<div>
				@if (_showComments == false)
				{
					<button type="button" class="btn btn-outline-primary col-2 border-0" @onclick="ShowComments">
						<span class="oi oi-comment-square me-2"></span>
						<span>
							@Post.Comments?.Count
						</span>
					</button>
				}
				else 
				{
					<button type="button" class="btn btn-secondary col-2" @onclick="ShowComments">
						<span class="oi oi-x"></span>
					</button>
				}
			</div>
		</div>
		@if (_showComments && Post.Comments is not null) 
		{
			<div class="col-8">
				@foreach (var comment in Post.Comments)
				{
					<CommentComponent Comment="comment" />
				}
			</div>
		}
	</div>

}

@code {
	[Parameter]
	public PostViewModel? Post { get; set; }

	private bool _showComments = false;

	private void ShowComments() 
	{
		_showComments ^= true;
	}
}
