@if (Posts is not null)
{
	@foreach (PostViewModel? post in Posts)
	{
		<div class="border border-top-0 border-dark p-2 bg-black text-white">
			<SinglePostComponent Post="post" OnPostDelete="OnPostDelete"/>
		</div>
	}
}

@code {

	[Parameter]
	public List<PostViewModel>? Posts { get; set; }

	[Parameter]
	public EventCallback<int> OnPostDelete { get; set; }

}